  "🍨 ice cream",
  "🍰 cake",
  "🍻 alcohal",
  "🍹 bar",
  "🌃 rooftop",
  "🎵 live music",
  };
      List<string> sportTag = new List<string> {
  "⚽ football",
  "⚾ baseball",
  "🏀 basketball",
  "⛳ golf",
  "🎾 tennis",
  "🏐 volleyball",
  "🏸 badminton",
  "🥊 boxing",
  "🏓 table tennis",
  "🎱 snooker",
