<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://kit.fontawesome.com/aecb1a01a7.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" type="text/css" href="~/css/create_activity.css">
    <link href='https://fonts.googleapis.com/css?family=Itim' rel='stylesheet'>
    <script src="~/js/create_activity.js"></script>
</head>

<body>
    <main class="p main">
        <div style="position: relative;">
            <form method="post" asp-area="" asp-controller="CreateActivity" asp-action="CreateActivity"
                enctype="multipart/form-data" class="p">
                <h1 class="p header">Create Activity</h1>

                <label for="nameact" class="p">
                    <input class="p" type="text" name="Title" id="nameact" placeholder="Enter activity name" required>
                </label>

                <label for="images" class="p">
                    <div style="position: relative; width:100%;height:100%; background:none; min-height:400px">
                        <input type="file" name="Img" accept="image/*" id="images" onchange="getImg(event)" class="p" multiple>
                        <div class="p images-container"></div>
                    </div>
                </label>

                <label for="addresss" class="p">
                    <textarea id="addresss" title='address' onclick=openSearchAddress() rows="3"
                        placeholder="Enter the address" required name="Place" class="p"></textarea>
                </label>

                <label for="date" class="p act">
                    <input type="date" name="Date" id="datee" required class="p">
                </label>

                <div class='p nump'>
                    <label for="nop">
                        <div class="p max">max</div>
                        <input type="number" name="MaxMember" id="nop" min="2" max="999" value="2" required class="p">
                        <p class="p max">people</p>
                    </label>
                </div>

                <label for="descrip" class="p">
                    <textarea name="Description" id="descrip" rows="5" class="p"
                        placeholder="Enter your description"></textarea>
                </label>

                <div class="p tag" id="showTag">
                    <input type="checkbox" style="display: none;" name="Tag" class="p">
                    <i class="p fa-solid fa-plus addTag" onclick="getTag()"></i>
                </div>

                <button type="reset" class="p formbutton" onclick="getImg('reset')"><p class="btntext">Reset All</p></button>
                <button type="submit" class="p formbutton"><p class="btntext">Create!</p></button>
            </form>

            <div id="viewTag" class="p">
                <div class="p tagSet">
                    <button class="p done" onclick="closeTag()">done</button>
                    <div class="p inTag">
                        @foreach (var tag in restaurantTag)
                        {
                            <input type="checkbox" id="@($"{tag}1")" name="tags" class='p check' value='@tag'>
                            <label for="@($"{tag}1")" class='p checkstr'>@tag</label>
                        }
                        @foreach (var tag in sportTag)
                        {
                            <input type="checkbox" id="@($"{tag}1")" name="tags" class='p check' value='@tag'>
                            <label for="@($"{tag}1")" class='p checkstr'>@tag</label>
                        }
                        @foreach (var tag in activityTag)
                        {
                            <input type="checkbox" id="@($"{tag}1")" name="tags" class='p check' value='@tag'>
                            <label for="@($"{tag}1")" class='p checkstr'>@tag</label>
                        }
                        <i class="p fa-solid fa-plus checkstr" style="color:#fcfffc" onclick="getNewTag(this)"
                            aria-hidden="true"></i>
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>

</html>